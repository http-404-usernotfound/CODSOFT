PasswdGen:

<PasswdGen>:
	orientation: 'vertical'
	BoxLayout:
		size_hint: 0.8, 0.6
		pos_hint: {'x':0.1}
		Slider:
			id: lvl
			size_hint: 0.7, 0.8
			min: 1
			max: 4.99
			value: 1
		Label:
			text: "Level: "+root.level[int(lvl.value)-1]
	BoxLayout:
		size_hint: 1, 0.5
		pos_hint: {'x': 0.35, 'y': 1}
		Label:
			size_hint: None, None
			text:"Length of password: "
		FloatLayout:
			TextInput:
				id: length
				font_size: 15
				pos_hint: {'x': 0.05, 'y': 0.315}
				size_hint: 0.06, 0.25
				multiline: False

	BoxLayout:
		size_hint: 0.2, 0.5
		pos_hint: {'x': 0.4, 'y': 0.5}
		Button:
			text: "Generate"
			on_press: root.Generate(int(lvl.value), length.text)
	BoxLayout:
		pos_hint: {'x': 0.4, 'y': 0.15}
		Label:
			size_hint: None, None
			pos_hint: {'x': 0, 'y': 0.36}
			text: "Password: "+root.password
		FloatLayout:
			size_hint: 0.4, 1
			Button:
				size_hint: 0.08, 0.12
				pos_hint: {'x': 0.2, 'y': 0.5}
				text: "Copy"
				on_press: root.cpy()
